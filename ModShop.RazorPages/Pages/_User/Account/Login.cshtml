@page "/Account/Login"
@namespace ModShop.RazorPages.Pages._User.Account
@model ModShop.RazorPages.Pages._User.Account.LoginModel
@{
    ViewData["Title"] = "مدشاپ | ورود";
}

<div class="login-content d-flex flex-column pt-lg-0 pt-12">
    <!--begin::Logo-->
    <a href="/" class="login-logo pb-xl-20 pb-15">
        <img src="~/web/assets/img/logo.png" class="max-h-70px" alt="" />
    </a>
    <!--end::Logo-->
    <!--begin::Signin-->
    <div class="login-form">
        <!--begin::Form-->
        <form class="form" method="post">
            <!--begin::Title-->
            <div class="pb-5 pb-lg-15">
                <h3 class="font-weight-bolder text-dark font-size-h2 font-size-h1-lg">ورود</h3>
                <div class="text-muted font-weight-bold font-size-h4">
                    تازه وارد هستید؟
                    <a href="/Account/SignUp" class="text-primary font-weight-bolder">ساخت اکانت</a>
                </div>
            </div>
            <!--begin::Title-->
            <!--begin::Form group-->
            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="form-group">
                <label class="font-size-h6 font-weight-bolder text-dark">ایمیل شما</label>
                <input class="form-control form-control-solid h-auto py-7 px-6 rounded-lg border-0" type="text" asp-for="Input.Email" autocomplete="off" />
            </div>
            <!--end::Form group-->
            <!--begin::Form group-->
            <div class="form-group">
                <div class="d-flex justify-content-between mt-n5">
                    <label class="font-size-h6 font-weight-bolder text-dark pt-5">کلمه عبور</label>

                    <a href="forgot.html" class="text-primary font-size-h6 font-weight-bolder text-hover-primary pt-5">
                        رمز عبور خود را فراموش کردید؟
                    </a>
                </div>
                <input class="form-control form-control-solid h-auto py-7 px-6 rounded-lg border-0" type="password" asp-for="Input.Password" autocomplete="off" />
            </div>

            <div class="form-group">
                <div class="d-flex justify-content-around mt-n5">
                    <label class="font-size-h6 font-weight-bolder text-dark pt-5">به خاطر بسپار؟</label>
                    <input class="h-auto py-7 px-6 rounded-lg border-0 mt-6" type="checkbox" asp-for="Input.RememberMe" autocomplete="off" />
                </div>
            </div>


            <!--end::Form group-->
            <!--begin::اکشن-->
            <div class="pb-lg-0 pb-5">
                <button type="submit" class="btn btn-primary font-weight-bolder font-size-h6 px-8 py-4 my-3 mr-3">ورود</button>
            </div>
            <!--end::اکشن-->
        </form>
        <!--end::Form-->
    </div>
    <!--end::Signin-->
</div>
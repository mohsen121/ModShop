@page "/User/ChangePassword"
@model ModShop.RazorPages.Pages._User.Profile.ChangePasswordModel
@{
}

<div class="section">
    <div class="container">
        <div class="row">
            <div id="aside" class="col-md-3">
                <div class="aside">
                    <h3 class="aside-title">منو</h3>

                    <div class="list-group list-group-flush rtl">
                        <a href="/User/Profile" class="list-group-item list-group-item-action">
                            حساب کاربری
                        </a>
                        <a href="/User/MyOrders" class="list-group-item list-group-item-action">
                            سفارش های من
                        </a>
                        <a class="list-group-item list-group-item-action active" href="/User/ChangePassword">تغییر رمز عبور</a>
                    </div>
                </div>
            </div>
            <div id="main" class="col-md-9">
                <div class="clearfix">
                    <div class="pull-right"><h3 class="title">تغییر مشخصات</h3></div>
                </div>
                <div class="row">
                    <form class="form px-10 rtl" method="post">
                        <div class="row">
                            <div class="form-group col-md-6">
                                <div asp-validation-summary="All" class="text-danger"></div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label class="font-size-h6 font-weight-bolder text-dark">رمز عبور قدیمی</label>
                                <input asp-for="Input.OldPassword" type="text" class="form-control form-control-solid h-auto py-7 px-6 border-0 rounded-lg font-size-h6" placeholder="رمز عبور قدیمی" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-md-6">
                                <label class="font-size-h6 font-weight-bolder text-dark">رمز عبور جدید</label>
                                <input asp-for="Input.Password" type="text" class="form-control form-control-solid h-auto py-7 px-6 border-0 rounded-lg font-size-h6" placeholder="رمز عبور جدید" value="" />
                            </div>
                            <div class="form-group col-md-6">
                                <label class="font-size-h6 font-weight-bolder text-dark">تایید رمز عبور جدید</label>
                                <input asp-for="Input.ConfirmPassword" required="required" type="text" class="form-control form-control-solid h-auto py-7 px-6 border-0 rounded-lg font-size-h6" placeholder="تایید رمز عبور جدید" />
                            </div>
                            <div class="pull-left">
                                <button type="submit" class="primary-btn">تغییر رمز عبور</button>
                            </div>
                        </div>


                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
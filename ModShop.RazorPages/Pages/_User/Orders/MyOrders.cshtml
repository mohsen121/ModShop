@page "/User/MyOrders"
@model ModShop.RazorPages.Pages._User.Orders.MyOrdersModel
@{
}


<div class="section">
    <div class="container">
        <div class="row">
            <div id="aside" class="col-md-3">
                <div class="aside">
                    <h3 class="aside-title">منو</h3>

                    <div class="list-group list-group-flush rtl">
                        <a href="/User/Profile" class="list-group-item list-group-item-action ">
                            حساب کاربری
                        </a>
                        <a href="/User/MyOrders" class="list-group-item list-group-item-action active">
                            سفارش های من
                        </a>
                        <a class="list-group-item list-group-item-action" href="/User/ChangePassword">تغییر رمز عبور</a>
                    </div>
                </div>
            </div>
            <div id="main" class="col-md-9">
                <div class="clearfix">
                    <div class="pull-right"><h3 class="title">تغییر مشخصات</h3></div>
                </div>
                <div class="row">
                    <table class="shopping-cart-table table table-bordered">
                        <thead>
                            <tr>
                                <th class="text-center">شماره سفارش</th>
                                <th class="text-center">قیمت کل</th>
                                <th class="text-center">تخفیف</th>
                                <th class="text-right">مالیات</th>
                                <th class="text-right">مشاهده جزئیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var o in Model.Orders)
                            {
                                <tr>
                                    <td class="price text-center">@o.OrderNumber</td>
                                    <td class="price text-center">@(Math.Floor((o.TotalPrice - o.Discount) + o.Tax))</td>
                                    <td class="price text-center">@o.Discount</td>
                                    <td class="price text-center">@o.Tax</td>
                                    <td class="text-center"><a href="/User/Orders/@o.Id">مشاهده</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
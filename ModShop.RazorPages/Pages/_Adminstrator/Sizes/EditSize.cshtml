@page "/Adminstrator/Sizes/Edit/{id}"
@model ModShop.RazorPages.Pages._Adminstrator.Sizes.EditSizeModel
@{
}

<div class="card card-custom gutter-b example example-compact">
    <div class="card-header">
        <h3 class="card-title">
            ویرایش سایز @Model.Command.Entity.Title
        </h3>

    </div>

    <form class="form" method="post">
        <div class="card-body">
            <input type="hidden" asp-for="Command.Entity.Id" value="@Model.Command.Entity.Id" />
            <input type="hidden" asp-for="Command.Entity.Created" value="@Model.Command.Entity.Created" />
            <div class="form-group row">
                <div class="col-lg-6">
                    <label>عنوان:</label>
                    <input type="text" asp-for="Command.Entity.Title" class="form-control" placeholder="عنوان کامل را وارد کنید">
                    <span class="form-text text-muted">عنوان کامل را وارد کنید</span>
                </div>
                <div class="col-lg-6">
                    <label>توضیحات:</label>
                    <input type="text" asp-for="Command.Entity.Code" class="form-control" placeholder="کد را وارد کنید">
                    <span class="form-text text-muted">لطفا کد سایز را وارد کنید</span>
                </div>
            </div>

        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-lg-6">
                    <button type="submit" class="btn btn-primary mr-2">ذخیره</button>
                    <button type="reset" class="btn btn-secondary">لغو</button>
                </div>
                <div class="col-lg-6 text-right">
                    <button type="reset" class="btn btn-danger">حذف</button>
                </div>
            </div>
        </div>
    </form>
</div>

@page "/Adminstrator/Admins/New"
@model ModShop.RazorPages.Pages._Adminstrator.Users.NewAdminModel
@{
}

<div class="card card-custom gutter-b example example-compact">
    <div class="card-header">
        <h3 class="card-title">
            تعریف مدیر جدید
        </h3>
    </div>
    <form class="form" method="post">
        <div class="card-body">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-lg-4">
                    <label>نام:</label>
                    <input type="text" asp-for="Command.Entity.Name" class="form-control" placeholder="نام را وارد کنید">

                    <span class="form-text text-muted">نام را وارد کنید</span>
                    <span asp-validation-for="Command.Entity.Name" class="text-danger"></span>
                </div>
                <div class="col-lg-4">
                    <label>نام خانوادگی:</label>
                    <input type="text" asp-for="Command.Entity.Family" class="form-control" placeholder="نام خانوادگی را وارد کنید">
                    <span class="form-text text-muted">لطفا نام خانوادگی را وارد کنید</span>
                    <span asp-validation-for="Command.Entity.Family" class="text-danger"></span>
                </div>

                <div class="col-lg-4">
                    <label>ایمیل:</label>
                    <input type="text" dir="ltr" asp-for="Command.Entity.Email" class="form-control" placeholder="ایمیل را وارد کنید">
                    <span class="form-text text-muted">لطفا ایمیل را وارد کنید</span>
                    <span asp-validation-for="Command.Entity.Email" class="text-danger"></span>
                </div>



            </div>

            <div class="form-group row">
                <div class="col-lg-4">
                    <label>استان:</label>
                    <input type="text" asp-for="Command.Entity.Province" class="form-control" placeholder="استان را وارد کنید">

                    <span class="form-text text-muted">استان را وارد کنید</span>
                    <span asp-validation-for="Command.Entity.Province" class="text-danger"></span>
                </div>
                <div class="col-lg-4">
                    <label>شهر:</label>
                    <input type="text" asp-for="Command.Entity.City" class="form-control" placeholder="شهر را وارد کنید">
                    <span class="form-text text-muted">لطفا شهر را وارد کنید</span>
                    <span asp-validation-for="Command.Entity.City" class="text-danger"></span>
                </div>

                <div class="col-lg-4">
                    <label>آدرس:</label>
                    <input type="text" asp-for="Command.Entity.Address" class="form-control" placeholder="آدرس را وارد کنید">
                    <span class="form-text text-muted">لطفا آدرس را وارد کنید</span>
                    <span asp-validation-for="Command.Entity.City" class="text-danger"></span>
                </div>

            </div>

            <div class="form-group row">
                <div class="col-lg-6">
                    <label>رمز عبور:</label>
                    <input type="password" asp-for="Command.Password" class="form-control" placeholder="رمز عبور را وارد کنید">

                    <span class="form-text text-muted">رمز عبور را وارد کنید</span>
                    <span asp-validation-for="Command.Password" class="text-danger"></span>
                </div>

                <div class="col-lg-6">
                    <label>تایید رمز عبور:</label>
                    <input type="password" asp-for="Command.ConfirmPassword" class="form-control" placeholder="تایید رمز عبور را وارد کنید">

                    <span class="form-text text-muted">تایید رمز عبور را وارد کنید</span>
                    <span asp-validation-for="Command.ConfirmPassword" class="text-danger"></span>
                </div>


            </div>


        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-lg-6">
                    <button type="submit" class="btn btn-primary mr-2">ذخیره</button>
                    <button type="reset" class="btn btn-secondary">لغو</button>
                </div>
            </div>
        </div>
    </form>



</div>
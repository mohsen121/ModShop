                <div class="section-title">
                    <h2 class="title">جدیدترین محصولات</h2>
                </div>
            </div>
            @(await Component.InvokeAsync<ModShop.RazorPages.ViewComponents.ProductListViewComponent>(new ModShop.RazorPages.ViewComponents.ProductListViewComponent.InputModel{ }))


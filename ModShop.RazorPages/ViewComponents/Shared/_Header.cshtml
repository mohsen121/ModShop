<div class="pull-OneBox">
    <!-- Logo -->
    <div class="header-logo">
        <a class="logo" href="#">
            <img src="~/web/assets/img/logo.png" alt="">
        </a>
    </div>
    <!-- /Logo -->
    <!-- Search -->
    <div class="header-search">
        @(await Component.InvokeAsync<ModShop.RazorPages.ViewComponents.Shared.SearchViewComponent>())
    </div>
    <!-- /Search -->
</div>
<div class="pull-TowBox">
    <ul class="header-btns">
        <!-- Account -->
        <li class="header-account dropdown default-dropdown">
            @(await Component.InvokeAsync<ModShop.RazorPages.ViewComponents.Shared.ProfileLinksViewComponent>())
        </li>
        <!-- /Account -->
        <!-- Cart -->
        <li class="header-cart dropdown default-dropdown">
            @(await Component.InvokeAsync<ModShop.RazorPages.ViewComponents.Shared.CartViewComponent>())
        </li>
        <!-- /Cart -->
        <!-- Mobile nav toggle-->
        <li class="nav-toggle">
            <button class="nav-toggle-btn main-btn icon-btn"><i class="fa fa-bars"></i></button>
        </li>
        <!-- / Mobile nav toggle -->
    </ul>
</div>